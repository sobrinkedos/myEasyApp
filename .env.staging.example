# Environment
NODE_ENV=staging

# Database (Neon - Staging Branch)
DATABASE_URL="postgresql://user:password@ep-xxx-pooler.us-east-2.aws.neon.tech/myeasyapp?options=endpoint%3Dstaging"

# Database Protection
ALLOW_DB_RESET=false

# Redis (Upstash - Staging)
REDIS_URL="rediss://default:xxx@xxx.upstash.io:6379"

# JWT
JWT_SECRET="your-staging-jwt-secret-different-from-dev"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
CORS_ORIGIN="https://staging.myeasyapp.com"

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="staging@myeasyapp.com"
SMTP_PASS="your-app-password"

# Logs
LOG_LEVEL="debug"
