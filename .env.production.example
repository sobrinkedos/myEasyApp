# Environment
NODE_ENV=production

# Database (Neon - Production Main Branch)
DATABASE_URL="postgresql://user:password@ep-xxx-pooler.us-east-2.aws.neon.tech/myeasyapp?options=endpoint%3Dmain"

# Database Protection
ALLOW_DB_RESET=false

# Redis (Upstash - Production)
REDIS_URL="rediss://default:xxx@xxx.upstash.io:6379"

# JWT
JWT_SECRET="your-super-secure-production-jwt-secret-use-strong-random-string"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
CORS_ORIGIN="https://app.myeasyapp.com"

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="noreply@myeasyapp.com"
SMTP_PASS="your-app-password"

# Logs
LOG_LEVEL="warn"

# Monitoring (opcional)
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
